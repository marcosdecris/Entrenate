<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#edecec"
    android:id="@+id/celdaRutinaLayout"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangulo_celda_recycler"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCeldaRutinaNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:layout_margin="8dp"/>


    <TextView
        android:id="@+id/textViewCeldaRutinaTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo estimado"
        android:layout_margin="8dp"
        />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewCeldaRutinaDificultad"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/dificultad_uno"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textViewCeldaRutinaZonaTrabaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Zona que trabaja"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            />

        </LinearLayout>

    </LinearLayout>

    </FrameLayout>

