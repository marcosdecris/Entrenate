<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcos.appejercicios.View.BottomNavigation.Cronometro"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rectangulo_gradiente_rutina_empezar">


        <View
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:background="@drawable/circulo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            />

            <Chronometer
                android:id="@+id/cronometroActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="105dp"
                />


        <Button
            android:id="@+id/cronometroStart"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Comenzar"
            android:layout_gravity="center|left"
            android:layout_marginLeft="32dp"
            android:textSize="15sp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangulo_view_pager"
        />

        <Button
            android:id="@+id/cronometroPause"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:textSize="15sp"
            android:text="Pausa"
            android:layout_marginRight="32dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangulo_view_pager"
            />

        <Button
            android:id="@+id/cronometroReiniciar"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="REINICIAR"
            android:textSize="15sp"
            android:layout_marginTop="150dp"
            android:background="@drawable/rectangulo_view_pager"/>


    </FrameLayout>

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation_cronometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />


</android.support.design.widget.CoordinatorLayout>