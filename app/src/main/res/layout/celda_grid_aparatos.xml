<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/layoutGridAparatos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="#e3ffffff"
        android:layout_margin="1dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewImagenGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/textViewGridNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/imageViewImagenGrid"
            />

        <ImageView
            android:id="@+id/imageViewGridDificultad"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/imageViewImagenGrid"/>

        <TextView
            android:id="@+id/textViewGridZonaTrabaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZonaTrabaja"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewGridNombre"
            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>